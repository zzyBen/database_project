<%= provide(:title, 'New Comment') %>

<h1>New Comment</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@comment) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :content %>
      <%= f.text_field :content %>
          
      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
